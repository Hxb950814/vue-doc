// tsconfig.json
{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "downlevelIteration": true,
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
